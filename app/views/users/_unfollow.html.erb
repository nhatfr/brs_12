<% if user != current_user %>
  <%= link_to t(:unfollow), relationship_path(user.id),
    method: :delete, remote: current_user.nil? ? false : true, class: "btn btn-primary btn-unfollow" %>
  &nbsp;&nbsp;
<% else %>
  <%= link_to t(:unfollow), relationship_path(user.id),
    method: :delete, remote: current_user.nil? ? false : true, class: "btn btn-primary btn-unfollow btn-hidden" %>
  &nbsp;&nbsp;
<% end %>

