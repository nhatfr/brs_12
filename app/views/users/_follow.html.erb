<% if user != current_user %>
  <%= link_to t(:follow), relationships_path(followed_id: user.id), 
    method: :post, remote: current_user.nil? ? false : true, class: "btn btn-primary btn-follow" %>
  &nbsp;&nbsp;
<% else %>
  <%= link_to t(:follow), relationships_path(followed_id: user.id),
    method: :post, remote: current_user.nil? ? false : true, class: "btn btn-primary btn-follow btn-hidden" %>
  &nbsp;&nbsp;
<% end %>

