<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:app_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" data-no-turbolink="true">
        <li>
          <%= link_to t(:home), root_path %>
        </li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :administration %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:users), admin_users_path %></li>
                <li><%= link_to t(:books), admin_books_path %></li>
                <li><%= link_to t(:all_request), admin_requests_path %></li>
              </ul>
            </li>
          <% end %>

          <li><%= link_to t(:users), users_path %></li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :books %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:my_favorite_list), user_favorites_path(current_user) %></li>
              <li><%= link_to t(:all_books), books_path %></li>
              <li><%= link_to t(:all_request), requests_path %></li>
              <li><%= link_to t(:reading_history), user_readings_path(user_id: current_user.id) %></li>
            </ul>
          </li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:edit), edit_path %></li>
              <li><%= link_to t(:logout), logout_path%></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:users), users_path %></li>
          <li><%= link_to t(:all_books), books_path %></li>
          <li><%= link_to t(:login), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
